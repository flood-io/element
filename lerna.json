{
	"lerna": "2.11.0",
	"npmClient": "yarn",
	"version": "1.5.5",
	"useWorkspaces": true,
	"command": {
		"init": {
			"exact": true
		},
		"publish": {
			"conventionalCommits": true
		},
		"version": {
			"message": "chore(release): publish %s\n[skip ci]",
			"allowBranch": [
				"master",
				"beta",
				"canary",
				"stable_1.x",
				"feature/*"
			]
		},
		"bootstrap": {
			"npmClient": "yarn"
		}
	},
	"ignoreChanges": [
		"assets",
		"coverage",
		"examples",
		"scripts",
		"smoke",
		"**/*.md",
		"packages/docs/**"
	]
}
