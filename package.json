{
	"name": "flood-element",
	"version": "2.0.0",
	"main": "index.js",
	"repository": "git@github.com:flood-io/element.git",
	"author": "Ivan Vanderbyl <ivanvanderbyl@gmail.com>",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"lerna": "^3.20.2"
	},
	"scripts": {
		"build:watch": "lerna run build:watch  --sort --parallel",
		"build": "lerna run build --sort",
		"test": "jest",
		"publish:brew": "cd ./scripts/publish-brew-tap && yarn && ts-node --project ./tsconfig.json -- ./index.ts",
		"publish:pre": "lerna publish --force-publish=* --cd-version prerelease && yarn publish:brew",
		"dev": "ts-node -r tsconfig-paths/register ./packages/cli/bin/element.ts",
		"elementctl": "ts-node -r tsconfig-paths/register ./packages/element-cli/bin/element.ts",
		"dev:docs": "cd ./packages/docs/ && yarn start",
		"docs:version": "cd ./packages/docs/ && docusaurus docs:version"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.1.0",
		"@commitlint/config-conventional": "^8.1.0",
		"@types/jest": "^24.0.25",
		"@types/node": "12.7.4",
		"@types/test-listen": "^1.1.0",
		"@typescript-eslint/eslint-plugin": "^2.15.0",
		"@typescript-eslint/parser": "^2.15.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-import": "^2.19.1",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^3.0.5",
		"jest": "^25.2.2",
		"nodemon": "^1.18.3",
		"prettier": "^1.19.1",
		"standard-changelog": "^2.0.13",
		"standard-version": "^8.0.1",
		"test-listen": "^1.1.0",
		"ts-node": "^8.8.1",
		"tsconfig-paths": "^3.9.0",
		"typedoc": "^0.15.0",
		"typescript": "^3.8.3",
		"webpack": "^4.41.5"
	},
	"resolutions": {
		"@types/node": "12.7.4",
		"**/terser-webpack-plugin": "^1.4.3"
	},
	"workspaces": [
		"packages/*"
	],
	"nohoist": [
		"packages/docs/**"
	],
	"standard-version": {
		"changelog": {
			"header": "Element Changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
		}
	}
}
